/// Guest user entity representing unauthenticated or anonymous users who can
/// initiate authentication processes or browse limited services. Contains
/// only auditing timestamps and soft delete support but no authentication
/// fields.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model oauth_server_guests {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Record creation timestamp.
  created_at DateTime
  
  /// Record last modification timestamp.
  updated_at DateTime
  
  /// Soft delete timestamp; null when active.
  deleted_at DateTime?
}

/// Member user entity for registered users supporting local email/password
/// authentication and social authentication. Includes unique email, verified
/// flag, hashed password, and auditing timestamps with soft delete enabled.
///
/// @namespace Actors
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model oauth_server_members {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Email address for user authentication and communication; unique per user.
  email String
  
  /// Flag indicating if the user's email address is verified.
  email_verified Boolean
  
  /// Hashed password for authentication; plain passwords are never stored.
  password_hash String
  
  /// Timestamp of record creation.
  created_at DateTime
  
  /// Timestamp of last record update.
  updated_at DateTime
  
  /// Timestamp of soft deletion if applicable.
  deleted_at DateTime?
  
  //----
  // RELATIONS
  //----
  oauth_server_social_user_links oauth_server_social_user_links[]
  oauth_server_user_profiles oauth_server_user_profiles?
  oauth_server_user_points oauth_server_user_points?
  oauth_server_user_point_coupons oauth_server_user_point_coupons[]
  
  @@unique([email])
}

