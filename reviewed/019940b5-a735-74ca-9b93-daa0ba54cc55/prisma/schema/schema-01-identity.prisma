/// Regular users who register with email and password, including profile
/// information. They must verify email before signing up for events. Holds
/// authentication-related data such as email (unique) and password_hash,
/// plus personal details like full name, phone number, and profile picture
/// URL. Timestamps track creation and updates for audit purposes.
///
/// @namespace Identity
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model event_registration_regular_users {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// User's unique email address used for login authentication.
  email String
  
  /// Hashed password for secure authentication; never store plain passwords.
  password_hash String
  
  /// User's full legal or preferred name.
  full_name String
  
  /// User's phone number, optional but useful for contacting.
  phone_number String?
  
  /// URL of user's profile picture, optional.
  profile_picture_url String?
  
  /// Flag indicating if user has verified their email address.
  email_verified Boolean
  
  /// Timestamp when the user record was created.
  created_at DateTime
  
  /// Timestamp when the user record was last updated.
  updated_at DateTime
  
  //----
  // RELATIONS
  //----
  event_registration_email_verification_tokens event_registration_email_verification_tokens[]
  event_registration_event_attendees event_registration_event_attendees[]
  event_registration_event_waitlists event_registration_event_waitlists[]
  event_registration_notifications event_registration_notifications[]
  event_registration_organizer_requests event_registration_organizer_requests[]
  
  @@unique([email])
  @@index([created_at])
}

