/// Workflow manager users responsible for creating, updating, activating,
/// and managing notification workflows. Stores identity and authentication
/// data required for access control. Includes standard audit fields for
/// record management.
///
/// @namespace Identity
/// @author AutoBE - https://github.com/wrtnlabs/autobe
model notification_workflow_workflowmanagers {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  id String @id
  
  /// Unique email address of the workflow manager used for login and
  /// notifications.
  email String
  
  /// Hashed password for authentication; never store plain passwords.
  password_hash String
  
  /// Timestamp when the user record was created.
  created_at DateTime
  
  /// Timestamp when the user record was last updated.
  updated_at DateTime
  
  /// Timestamp for soft deletion; null if the record is active.
  deleted_at DateTime?
  
  //----
  // RELATIONS
  //----
  notification_workflow_audit_logs notification_workflow_audit_logs[]
  
  @@unique([email])
  @@index([created_at])
}

